pipeline {
    agent any
    environment {
        TF_VAR_region = 'us-west-2' // Set Terraform variables if needed
    }
    stages {
        stage('Checkout') {
            steps {
                git 'git@github.com:Bharaththumma/Terraform.git' //
            }
        }
        stage('Terraform Init') {
            steps {
                script {
                    // Initialize Terraform
                    sh 'terraform init'
                }
            }
        }
        stage('Terraform Plan') {
            steps {
                script {
                    // Create Terraform plan
                    sh 'terraform plan'
                }
            }
        }
        stage('Terraform Apply') {
            steps {
                script {
                    // Apply Terraform changes
                    sh 'terraform apply --auto-approve'
                }
            }
        }
    }
}
