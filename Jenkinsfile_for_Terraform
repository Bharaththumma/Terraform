pipeline {
    agent any
    environment {
        TF_VAR_region = 'us-west-2' // Set Terraform variables if needed
    }
stage('Checkout') {
    steps {
        git 'git@github.com:Bharaththumma/Terraform.git' // Use SSH URL
    }
}
        stage('Terraform Init') {
            steps {
                terraformInit() // Initialize Terraform
            }
        }
        stage('Terraform Plan') {
            steps {
                terraformPlan() // Create Terraform plan
            }
        }
        stage('Terraform Apply') {
            steps {
                terraformApply() // Apply Terraform changes
            }
        }
    }
}
