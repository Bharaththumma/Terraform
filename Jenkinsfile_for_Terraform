pipeline {
    agent any

    tools {
        // Specify the name of the Terraform tool configured in Global Tool Configuration
        terraform "Terraform"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: '<CREDS>', url: 'https://github.com/Bharaththumma/Terraform.git'
            }
        }
        stage('Terraform init') {
            steps {
                // Use the 'terraform' tool defined above
                script {
                    def tfHome = tool 'Terraform'
                    sh "${tfHome}/terraform init"
                }
            }
        }
        stage('Terraform apply') {
            steps {
                // Use the 'terraform' tool defined above
                script {
                    def tfHome = tool 'Terraform'
                    sh "${tfHome}/terraform apply --auto-approve"
                }
            }
        }
    }
}
